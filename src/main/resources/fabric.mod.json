{
  "schemaVersion": 1,
  "id": "invincible-anvils",
  "version": "${version}",
  "name": "Invincible Anvils",
  "description": "A server-side mod to prevent anvils from being damaged or broken when used.",
  "authors": [
    "Kian Leiner"
  ],
  "icon": "assets/invincible-anvils/protected_anvil.png",
  "environment": "server",
  "entrypoints": {
    "server": [
      "com.kleinercode.fabric.invincibleanvils.InvincibleAnvils"
    ]
  },
  "mixins": [
    "invincible-anvils.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}